{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "jsx": "react",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      
      "moduleResolution": "node",
      "baseUrl": "./src",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "src/**/*",
      "src/types"
    ],
    "exclude" : ["node_modules"]
  }
  